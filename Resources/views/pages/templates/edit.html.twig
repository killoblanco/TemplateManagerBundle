{% extends "@TemplateManager/utils/common/base.html.twig" %}

{% block content %}
    <div class="container" id="vueController">
        <div class="row">
            <div class="col-sm-8">
                <div class="row">
                    {{ include(template_from_string(template.content)) }}
                </div>
            </div>
            <div class="col-sm-4">
                {{ discoverControls(template.content) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    {{ generateScriptHandlers('#vueController', template.content) }}
{% endblock %}

